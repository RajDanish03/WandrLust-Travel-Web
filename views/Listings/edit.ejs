<%layout("/layouts/boilerPlate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <form action="/listings/<%=all_listing._id%>?_method=put" method="post"  novalidate class="needs-validation" enctype="multipart/form-data">
        <h3>Edit Listing</h3>

        <div class="mb-3">
          <label for="description" class="form-label">TItle </label>
          <input
            type="text"
            value="<%=all_listing.title%>"
            name="title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title Looks Goods</div>
          <div class="invalid-feedback">Please Add Your Title</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label"> Description </label>
          <textarea name="description" class="form-control" required>
 "<%=all_listing.description%></textarea
          >
          <div class="invalid-feedback">Describe Your Listing Here</div>
          <div class="valid-feedback">Looking Good</div>
        </div>



        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            type="file"
            name="image"
            class="form-control"/>
        </div>

        <div class="mb-3">
          <label for="Price" class="form-label"> Listing Price </label>
          <input
            type="number"
            value="<%=all_listing.price%>"
            name="price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter Valid Price</div>
          <div class="valid-feedback">Price Added</div>
        </div>
        <div class="row">
          <div class="mb-3 col-4">
            <label for="Location" class="form-label"> Location </label>
            <input
              type="text"
              value="<%=all_listing.location%>"
              name="location"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Add Location Here</div>
            <div class="valid-feedback">Locations Added</div>
          </div>
          <div class="mb-3 col-8">
            <label for="Country" class="form-label"> Country </label>
            <input
              type="text"
              value="<%=all_listing.country%>"
              name="country"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter Country Here</div>
            <div class="valid-feedback">Country Added</div>
          </div>
        </div>

        <button class="btn mb-3">EDIT</button>
      </form>
    </div>
  </div>
</body>
