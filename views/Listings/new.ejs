<%layout("/layouts/boilerPlate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <form
        action="/listings"
        method="post"
        novalidate
        class="needs-validation"
        enctype="multipart/form-data"
      >
        <h3>Create New Listing</h3>

        <div class="mb-3">
          <label for="title" class="form-label"> Title</label>
          <input
            type="text"
            placeholder="Add Your linsting Title"
            name="title"
            class="form-control"
            required
          />
          <div class="valid-feedback">Title Looks Goods</div>
          <div class="invalid-feedback">Please Add Your Title</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label"> Description </label>
          <textarea name="description" class="form-control" required></textarea>
          <div class="invalid-feedback">Describe Your Listing Here</div>
          <div class="valid-feedback">Looking Good</div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload Image </label>
          <input type="file" name="image" class="form-control" required/>
        </div>
        <div class="mb-3">
          <label for="price" class="form-label"> Price </label>
          <input
            placeholder="Listing Price"
            name="price"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please Enter Valid Price</div>
          <div class="valid-feedback">Price Added</div>
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="location" class="form-label"> Location </label>
            <input
              type="text"
              placeholder="City , State"
              name="location"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Add Location Here</div>
            <div class="valid-feedback">Locations Added</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label"> country </label>
            <input
              type="text"
              placeholder="India"
              name="country"
              class="form-control"
              required
            />
            <div class="invalid-feedback">Please Enter Country Here</div>
            <div class="valid-feedback">Country Added</div>
          </div>
          <br />
        </div>
        <br />

        <button class="btn-add mb-3">ADD</button>
      </form>
    </div>
  </div>
  <br />
</body>
