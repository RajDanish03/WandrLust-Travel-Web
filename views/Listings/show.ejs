<% layout("/layouts/boilerPlate.ejs") %>

<div class="row mt-4">
  <div class="col-md-8 offset-md-2">
    <h3><%= Listing.title %></h3>

    <!-- Listing Card -->
    <div class="listing-card my-3">
      <img src="<%=Listing.image.url%>" class="show-image" alt="ALL LISTINGS" />

      <div class="listing-content">
        
        <p class="card-text">Owned By <%=Listing.owner.username%></p>
       
           <p><%= Listing.description %></p>
         <p> &#8377;<%= Listing.price.toLocaleString("en-IN") %></p>
          <p><%= Listing.location %></p>
         <p> <%= Listing.country %></p>
       
      </div>
    </div>

    <!-- Edit/Delete Buttons -->
     <% if (currUser && currUser._id.toString() === Listing.owner._id.toString()) { %>
    <div class="d-flex justify-content-between mb-3 edit-btn">
      <a href="/listings/<%= Listing._id %>/edit" class="btn btn-warning"
        >EDIT</a
      >
      <form action="/listings/<%= Listing._id %>?_method=DELETE" method="post">
        <button class="btn btn-dark">DELETE</button>
      </form>
    </div>
    <%}%>
    <hr />

<%if(currUser){%>


    <!-- Review Form -->
    <h4>Leave A Review</h4>
    <form
      action="/listings/<%= Listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        min="0"
        max="5"
        name="review[rating]"
        class="form-range"
      />

      <label for="review" class="form-label">Comment</label>
      <textarea
        name="review[comment]"
        cols="10"
        rows="5"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please Add Some Comment</div>
<br>
      <button class="btn-submit mt-2">Submit</button>
    </form>
<%}%>
<br>

   
<p class="fw-bold mb-3">All Reviews</p>

<div class="row">
  <% for (let review of Listing.reviews) { %>
    <div class="col-md-6 mb-4">
      <div class="card shadow-sm border-0 rounded-4 h-100">
        <div class="card-body">
          <!-- Username -->
          <h5 class="card-title mb-1"><%= review.author.username %></h5>

          <!-- Star Rating -->
          <div class="mb-2">
            <% for (let i = 0; i < review.rating; i++) { %>
              <span class="text-warning">★</span>
            <% } %>
            <% for (let i = review.rating; i < 5; i++) { %>
              <span class="text-secondary">★</span>
            <% } %>
          </div>

          <!-- Comment -->
          <p class="card-text text-muted fst-italic">"<%= review.comment %>"</p>

          <!-- Delete Button (only for owner or review author) -->
          <% if (
            currUser &&
            (currUser._id.toString() === review.author._id.toString() ||
             currUser._id.toString() === Listing.owner._id.toString())
          ) { %>
            <form method="POST" action="/listings/<%= Listing._id %>/reviews/<%= review._id %>?_method=DELETE">
              <button class="btn btn-sm btn-outline-danger mt-2">Delete</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  <% } %>
</div>

